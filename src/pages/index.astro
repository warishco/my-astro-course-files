---

// components
import PricingCard from "../components/PricingCard.astro";

//import styles
import "../styles/main.css";

// data
import pricingCardData from "../data/cardData.json";
import type { Image } from "astro:assets";

---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Astro</title>
  </head>
  <body>
    <!-- Place pricing section here -->
    <main>
      <div class="card-wrapper">
        {pricingCardData.map(card => <PricingCard {...card} />)}
      </div>
    </main>
    <style>
      main {
        display: grid;
        place-items: center;
        min-height: 100vh;
        padding: var(--space--xl);
      }
      
      .card-wrapper {
        display: flex;
        gap: var(--space--xl);
        align-items: center;
        flex-wrap: wrap;
        justify-content: center;
      }
    </style>
  </body>
</html>
